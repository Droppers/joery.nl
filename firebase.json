{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [
    {
      "target": "joery-en",
      "public": "dist/en",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "joery-nl",
      "public": "dist/nl",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
